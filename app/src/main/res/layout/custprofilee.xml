<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_curve">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/bg_curve"
        android:id="@+id/head_fml"/>

<Space
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="100dp"
    android:id="@+id/blank_space"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:gravity="center"
        android:id="@+id/cust_frag_name"
        android:layout_below="@id/blank_space"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Email"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:gravity="center"
        android:id="@+id/cust_frag_mail"
        android:layout_below="@id/cust_frag_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Phone"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:gravity="center"
        android:id="@+id/cust_frag_phone"
        android:layout_below="@id/cust_frag_mail"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Address"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:gravity="center"
        android:id="@+id/cust_frag_add"
        android:layout_below="@id/cust_frag_phone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="8dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/cust_frag_btn_logout"
        android:layout_below="@id/cust_frag_add"/>



</RelativeLayout>